<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN">
<HTML>
<HEAD>
  <META NAME="description" content="Connect 4 is a PC-Game written in HTML and JavaScript">
  <META NAME="author" content="Lutz Tautenhahn">
  <META NAME="keywords" content="Game, Connect 4, JavaScript">
  <META HTTP-EQUIV="Content-Type" CONTENT="text/html; charset=iso-8859-1">
  <title>Connect 4</title>

  <script src="~/connectfour/connectfour.js" language="JavaScript">
  </script>
</HEAD>

<BODY bgcolor=#E0C080 background="/connectfour/bg_papyrus.gif" text=#000000 onResize="javascript:Resize()">
  <DIV ALIGN=center>
    <form name="OptionsForm">

      <table noborder>

        <tr>

          <td>
            <table border=6 cellpadding=0 cellspacing=0 bgcolor=#C0C0C0>

              <script language="JavaScript">
      document.open("text/plain");

      document.writeln("<tr align=center>");
      for (i=0; i < MaxWidth; i++)
          document.writeln("<td><a href=\"javascript:Clicked(" + i + ")\" onMouseOver=\"MouseOver(" + i + ")\" onMouseOut=\"MouseOut()\"><IMG src=\"/connectfour/connect4.gif\" border=0></a></td>");

      document.writeln("</tr>");

      for (j = 0; j < MaxHeight; j++)
      {
        document.writeln("<tr align=center>");
        for (i=0; i < MaxWidth; i++)
            document.writeln("<td><IMG src=\"/connectfour/connect1.gif\" border=0></td>");
        document.writeln("</tr>");
      }
      document.close();
              </script>

            </table>
          </td>

          <td>&nbsp;</td>

          <td valign=top>
            <table noborder cellpadding=3 cellspacing=3 width=100%>

              <tr><td>&nbsp;</td></tr>

              <tr>
                <td>
                  <table border cellpadding=1 cellspacing=1 width=100% bgcolor=#FFE0A0>
                    <tr>
                      <td>
                        <nobr>
                          &nbsp;<b>Size:</b>
                          <input type=radio name="Size" value="0" 
                                 onClick="javascript:SetSize(0)"><b>9 x 7</b>
                          <input type=radio name="Size" checked value="1" 
                                 onClick="javascript:SetSize(1)"><b>7 x 6</b>
                        </nobr>
                      </td>
                    </tr>
                  </table>
                </td>
              </tr>

              <tr>
                <td>
                  <table border cellpadding=1 cellspacing=1 width=100% bgcolor=#FFE0A0>
                    <tr><td><input type=radio name="Red" checked value="Red: Player" 
                                   onClick="javascript:SetOption(0,0)"> <b>Red: Player</b></td></tr>
                    <tr>
                      <td>
                        <table noborder width=100% cellpadding=0 cellspacing=0>
                          <tr><td><input type=radio name="Red" value="Red: Computer" 
                                         onClick="javascript:SetOption(0,1)"> <b>Red: Computer</b></td></tr>
                          <tr>
                            <td>
                              <nobr>
                                &nbsp;<b>Level:</b>
                                <input type=radio name="RedLevel" value="1" 
                                       onClick="javascript:SetLevel(0,1)"><b>1</b>
                                <input type=radio name="RedLevel" checked value="2" 
                                       onClick="javascript:SetLevel(0,2)"><b>2</b>
                                <input type=radio name="RedLevel" value="3" 
                                       onClick="javascript:SetLevel(0,3)"><b>3</b>
                                <input type=radio name="RedLevel" value="4"
                                       onClick="javascript:SetLevel(0,4)"><b>4</b>
                              </nobr>
                            </td>
                          </tr>
                        </table>
                      </td>
                    </tr>
                  </table>
                </td>
              </tr>

              <tr>
                <td>
                  <table border cellpadding=1 cellspacing=1 width=100% bgcolor=#FFE0A0>
                    <tr><td><input type=radio name="Green" value="Green: Player" 
                                   onClick="javascript:SetOption(1,0)"> <b>Green: Player</b></td></tr>
                    <tr>
                      <td>
                        <table noborder width=100% cellpadding=0 cellspacing=0>
                          <tr><td><input type=radio name="Green" checked value="Green: Computer" 
                                         onClick="javascript:SetOption(1,1)"> <b>Green: Computer</b></td></tr>
                          <tr>
                            <td>
                              <nobr>
                                &nbsp;<b>Level:</b>
                                <input type=radio name="GreenLevel" value="1" 
                                       onClick="javascript:SetLevel(1,1)"><b>1</b>
                                <input type=radio name="GreenLevel" value="2" 
                                       onClick="javascript:SetLevel(1,2)"><b>2</b>
                                <input type=radio name="GreenLevel" checked value="3" 
                                       onClick="javascript:SetLevel(1,3)"><b>3</b>
                                <input type=radio name="GreenLevel" value="4" 
                                       onClick="javascript:SetLevel(1,4)"><b>4</b>
                              </nobr>
                            </td>
                          </tr>
                        </table>
                      </td>
                    </tr>
                  </table>
                </td>
              </tr>

              <tr>
                <td>
                  <table border cellpadding=1 cellspacing=1 width=100% bgcolor=#FFE0A0>
                    <tr><td width=100%>
                        <input type=radio name="Start" checked value="Red" 
                               onClick="javascript:SetOption(2,1)"> <b>Red begins</b></td></tr>
                    <tr><td>
                        <input type=radio name="Start" value="Green" 
                               onClick="javascript:SetOption(2,0)"> <b>Green begins</b></td></tr>
                    <tr>
                      <td align=center>
                        <table noborder width=100% cellpadding=0 cellspacing=0>
                          <tr>
                            <td align=center>
                              <input type=button value="&nbsp;&nbsp;NEW&nbsp;&nbsp;" style="width:85" 
                                     onClick="javascript:Init()"></td>
                            <td align=center>
                              <input type=button value="&nbsp;HELP&nbsp;" style="width:85" 
                                     onClick="javascript:Help()" name="HelpButton"></td>
                          </tr>
                        </table>
                      </td>
                    </tr>

                    <tr>
                      <td align=center>
                        <table noborder width=100% cellpadding=0 cellspacing=0>
                          <tr>
                            <td align=center>
                              <input type=button value="&nbsp;&lt;&lt;&nbsp;" style="width:30" 
                                     onClick="javascript:Back();Back()" title="two moves back"></td>
                            <td align=center>
                              <input type=button value="&nbsp;&lt;&nbsp;" style="width:30" 
                                     onClick="javascript:Back()" title="one move back"></td>
                            <td align=center>
                              <input type=button value="&nbsp;&nbsp;&nbsp;&nbsp;" 
                                     style="width:30;background-color:#FFFFFF;font-weight:bold" 
                                     disabled name="Moves"></td>
                            <td align=center>
                              <input type=button value="&nbsp;&gt;&nbsp;" style="width:30" 
                                     onClick="javascript:Replay()" title="one move forward"></td>
                            <td align=center>
                              <input type=button value="&nbsp;&gt;&gt;&nbsp;" style="width:30" 
                                     onClick="javascript:Replay();Replay()" title="two moves forward"></td>
                          </tr>
                        </table>
                      </td>
                    </tr>
                  </table>
                </td>
              </tr>
            </table>
          </td>
        </tr>
      </table>
    </form>
  </DIV>
  <script language="JavaScript">
    Init();
    setInterval("Timer()",200);
  </script>
</BODY>
</HTML>